			<div class="site-section bg-light">
					<% if(Success == 1){ %>
						<div class="alert alert-success">
							<strong>Success!</strong> Component inserted successfully
						</div>
						<% } else if(Success == 0){ %>
						<div class="alert alert-danger">
							<strong>Failure!</strong> Component failed to insert
						</div>
					<% } %>
				<div class="container">
					<div class="row">
						<div class="col-md-12 mb-5"  data-aos="fade">
							<form class="p-5 bg-white form-horizontal" method="post" action="/pages/ComponentInsert" onsubmit = 'return FormValidation()'>
								<div class="container">
								
								<div class="row form-group">
									
									<div class="col-sm-4">  
										<label for="Drawingno">Drawing no:</label>
										<input type="Text" class="form-control" id="Drawingno" name="Drawingno" placeholder="Enter Drawing no" required="true">
								 	</div>

								  	<div class="col-sm-4">
								 		<label for="customer">Customer:</label>
                                        <select name="customer" id="customer" class="browser-default custom-select form-control" required="true">
                                            <option selected>Select Client</option>
                                            <% ClientList.forEach(function(client){%>
                                                <option><%= client %></option>
                                                <%});%>
										</select>
										<p id="customervalidate" class = "text-warning"></p>
									</div>
									
									<div class="col-sm-4">
										<label for="hsnnumber">HSN:</label>
										<input type="number" class="form-control"  id="hsnnumber" name="hsnnumber" placeholder="Enter HSN"></input>
										<p id="operationvalidate" class = "text-warning"></p>
									</div>

								</div>
								
                                    
								
								<div class="row form-group">
									
									<div class="col-sm-4">
										<label for="Description">Description:</label>
										<input type="Text" class="form-control" placeholder="Enter Description" id="Description" name="Description"></input>
										<p id="descriptionvalidate" class = "text-warning"></p>
									</div>

									<div class="col-sm-4">
											<label for="operation">Operation:</label>
											<input type="text" class="form-control"  id="operation" name="operation" placeholder="Enter Operation"></input>
											<p id="operationvalidate" class = "text-warning"></p>
									</div>
	
									<div class="col-sm-4">
										<label for="pricepiece">Price per piece</label>
										<input type="Number" class="form-control" id="pricepiece" name="pricepiece" placeholder="Enter Price per Piece" required="true">
									</div>

								</div>

								<div class=" row form-group">
								  <div class="col-sm-4">
									<button type="submit" class="btn btn-default">Submit</button>
								  </div>
								</div>

							</div>
							</form>
						</div>
					</div>
				</div>
